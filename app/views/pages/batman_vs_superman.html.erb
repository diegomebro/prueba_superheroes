<div class="row">
  <div class="col-md-6 vs_batman">
  	<div class="contenido_form">
	  	<a href="<%= pages_batman_path %>" class="btn btn-primary btn-lg active bt_shero" role="button">Batman</a>
		<form action="<%= pages_saver_vote_path %>" method="post">
		<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
